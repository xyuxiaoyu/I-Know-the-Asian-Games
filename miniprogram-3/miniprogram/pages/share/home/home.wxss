/* pages/share/home/home.wxss */

.content {
  text-align: justify;
  /*padding-bottom: 5rpx;*/
}

.item {
  background-color: #fff;
  margin: 10rpx 3%;
  margin-bottom: 20rpx;
  display: inline-block;
  width: 96%;
  border-radius: 20rpx;
  overflow: hidden;
}

.heart {
  width: 30rpx;
  height: 26rpx; 
  display: flex;
  margin-right: 8rpx;
  margin-left: 18rpx;
  margin-top: 20rpx;
  padding: 0 15rpx 30rpx;
  align-items: center;
  font-size: 25rpx;
  color: #c4c4c4;
  /*text-decoration: underline;*/
}

.icon{
  margin-right: 10rpx;
}

.item-img {
  width: 100%
}

.item-title {
  font-size: 24rpx;
  /*text-overflow: ellipsis;*/
  display: -webkit-box;
  /*-webkit-box-orient: vertical;
  -webkit-line-clamp: 2;*/
  overflow: hidden;
  font-family: 'PingFang SC-Medium';
  margin: 15rpx;
  /*line-height: 27rpx;*/
}

.item-title-box {
  display: flex;
  position: relative;
}

.left,
.right {
  display: inline-block;
  vertical-align: top;
  width: 49%;
}

.but{
  width:150rpx;
}
